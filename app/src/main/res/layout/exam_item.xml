<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">

    <TextView
            android:text="Titulo del examen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tituloTV" android:textSize="24sp"
            android:textStyle="bold" android:paddingBottom="5dp"/>
    <TextView
            android:text="Nota:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/notaTV" android:textSize="16sp"
            android:paddingBottom="5dp"/>
    <TextView
            android:text="Fecha:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/fechaTV" android:textSize="16sp"
            android:paddingBottom="5dp"/>
    <TextView
            android:text="Asignatura:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/asignaturaTV" android:paddingBottom="5dp"
            android:textSize="16sp"/>
</LinearLayout>